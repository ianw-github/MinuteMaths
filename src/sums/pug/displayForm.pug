
-var questions=data.questions;
-var table=data.table;
-var operator = data.operator;
-var answer = [];
if questions
    h2.test Enter missing values
    form
    each row,index in questions
        -answer = table[index];
        div.row(id='question-'+index, class="row-"+index)
            if row[0] !==''
                span.num1(data-value=''+row[0], name='num1') #{row[0]}
            else
                input.num1(type='text', name='num1', value='' + row[0], id='q'+index+'-1')
            span.operator #{data.operator || 'x'}
            if row[1] !== ''
                span.num2(data-value=''+row[1], name='num2') #{row[1]}
            else
                input.num2(type='text', name='num2', value='' + row[1], id='q'+index+'-2')
            span.equals =
            if row[2] !== ''
                span.res(data-value=''+row[2], name='res') #{row[2]}
            else
                input.res(type='text', name='res', value='' + row[2], id='q'+index+'-3')
            span.correct.hidden(id='question-'+index+'-correct') #{'\u2713'} Correct answer
            span.incorrect.hidden(id='question-'+index+'-incorrect') #{'\u274c'} Wrong answer - #{answer[0] + operator + answer[1] + '=' + answer[2]}

